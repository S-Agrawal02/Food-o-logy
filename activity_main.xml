<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6d7185"
    tools:context="com.example.acer.foodology.MainActivity">

    <Button
        android:id="@+id/home"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:onClick="planclick"
        android:text="PLAN"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/veg"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:color/darker_gray"
        android:onClick="vegclick"
        android:text="VEG"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="133dp"
        android:layout_alignBaseline="@+id/nonveg"
        android:layout_alignBottom="@+id/nonveg"
        android:layout_toEndOf="@+id/home" />

    <Button
        android:id="@+id/nonveg"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/home"
        android:layout_alignEnd="@+id/textView3"
        android:background="@android:color/darker_gray"
        android:onClick="nonvegclick"
        android:text="NON-VEG"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="133dp" />

    <Button
        android:id="@+id/fruits"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/nonveg"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/nonveg"
        android:background="@android:color/darker_gray"
        android:onClick="fruitsclick"
        android:text="FRUITS"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="76dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/home"
        android:layout_marginTop="12dp"
        android:text="This app will help you to know about the food that we eat on regular basis. We think about food between 15 and 18 times a day."
        android:textColor="@android:color/white"
        android:textSize="32px"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="176dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="252dp"
        android:layout_height="78dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:text="Are you getting enough carbs for energy? Enough essential fats for cell structure? Enough protein for muscle maintenance?"
        android:textColor="@android:color/white"
        android:textSize="32px"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="279dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="21dp"
        android:text="Make your food work for you, rather than against you...!!!"
        android:textColor="@android:color/black"
        android:textSize="34px"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Get the nutritional values of the food items"
        android:textColor="@android:color/white"
        android:textSize="35px"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="328dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="14dp"
        android:text="Get to know your food today to ensure the best health and wellbeing for your future!"
        android:textColor="@android:color/black"
        android:textSize="34px"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="436dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/topbar"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView4"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/eating"
        android:id="@+id/frameLayout">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>
